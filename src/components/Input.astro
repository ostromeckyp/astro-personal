---
interface Props {
  id: string;
  name: string;
  label: string;
  type?: "text" | "email" | "password" | "textarea";
  placeholder?: string;
  required?: boolean;
  rows?: number;
  value?: string;
}

const {
  id,
  name,
  label,
  type = "text",
  placeholder,
  required = false,
  rows = 4,
  value = ""
} = Astro.props;

const isTextarea = type === "textarea";
---

<div class="relative">
  {isTextarea ? (
    <textarea
      id={id}
      name={name}
      rows={rows}
      required={required}
      placeholder=" "
      class="peer w-full h-full min-h-[100px] pt-6 pb-2 px-3 border-2 border-gray-300 rounded-lg bg-transparent text-gray-900 placeholder-transparent focus:outline-none focus:border-primary focus:ring-0 transition-colors duration-200"
    >{value}</textarea>
  ) : (
    <input
      type={type}
      id={id}
      name={name}
      required={required}
      placeholder=" "
      value={value}
      class="peer w-full h-full pt-6 pb-2 px-3 border-2 border-gray-300 rounded-lg bg-transparent text-gray-900 placeholder-transparent focus:outline-none focus:border-primary focus:ring-0 transition-colors duration-200"
    />
  )}
  <label
    for={id}
    class="absolute left-3 -top-3 text-sm text-gray-500 bg-inherit px-1 transition-all duration-200 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-500 peer-placeholder-shown:top-3 peer-focus:-top-3 peer-focus:text-sm peer-focus:text-primary"
  >
    {label}
  </label>
</div> 