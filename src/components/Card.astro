---
interface Props {
  class?: string;
  hover?: boolean;
  scale?: boolean;
}

const { class: className = "", hover = true, scale = false } = Astro.props;
---

<div class:list={[
  "bg-white rounded-xl shadow-md p-6",
  hover && "hover:shadow-lg transition-shadow duration-300",
  scale && "hover:scale-105 transition-all duration-300",
  className
]}>
  <slot />
</div> 