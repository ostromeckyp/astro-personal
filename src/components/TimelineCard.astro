---
interface Props {
  title: string;
  subtitle: string;
  year: string;
  description?: string;
  skills?: string[];
  index: number;
}

const { title, subtitle, year, description, skills, index } = Astro.props;
---

<div class="relative pl-12 pb-12 last:pb-0">
  <div class="absolute left-0 top-2 w-8 h-8 rounded-full bg-primary/10 dark:bg-primary/20 flex items-center justify-center">
    <div class="w-3 h-3 rounded-full bg-primary"></div>
  </div>
  <div class="card hover:shadow-lg">
    <span class="text-sm text-gray-500 dark:text-gray-400">{year}</span>
    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mt-1">{title}</h3>
    <p class="text-gray-600 dark:text-gray-300">{subtitle}</p>
    {description && (
      <p class="mt-4 text-gray-600 dark:text-gray-300 leading-relaxed">{description}</p>
    )}
    {skills && (
      <div class="mt-4 flex flex-wrap gap-2">
        {skills.map((skill) => (
          <span class="px-3 py-1 text-sm bg-primary/5 dark:bg-primary/10 text-primary dark:text-primary-300 rounded-full ring-1 ring-primary/10 dark:ring-primary/30">
            {skill}
          </span>
        ))}
      </div>
    )}
  </div>
</div> 