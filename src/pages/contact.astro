---
import Layout from '../layouts/Layout.astro';
import Input from '../components/Input.astro';
import Contact from '../components/Contact';
---

<Layout title="Contact | Portfolio">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-16">
      <p class="text-gray-600 dark:text-gray-400 mb-2 opacity-0 animate-fade-in">Feel free to contact me anytime</p>
      <h1 class="text-5xl font-bold text-gray-900 dark:text-white opacity-0 animate-fade-in animation-delay-100">Get in touch</h1>
      <div class="w-24 h-1 bg-emerald-500 mx-auto mt-4 opacity-0 animate-fade-in animation-delay-200"></div>
    </div>

    <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-12">
      <div class="opacity-0 animate-fade-in animation-delay-300">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Message Me</h2>
        <Contact />
      </div>

      <div class="opacity-0 animate-fade-in animation-delay-400">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Contact Info</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-8">Always available for freelance work if the right project comes along. Feel free to contact me!</p>
        
        <div class="space-y-6">
          <div class="flex items-center">
            <div class="w-10 h-10 rounded-full bg-emerald-100 dark:bg-emerald-900 flex items-center justify-center mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-emerald-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
              </svg>
            </div>
            <div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Name</div>
              <div class="text-gray-900 dark:text-gray-200">Pawel Ostromecki</div>
            </div>
          </div>

          <div class="flex items-center">
            <div class="w-10 h-10 rounded-full bg-emerald-100 dark:bg-emerald-900 flex items-center justify-center mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-emerald-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Location</div>
              <div class="text-gray-900 dark:text-gray-200">Wroclaw, Poland</div>
            </div>
          </div>

          <div class="flex items-center">
            <div class="w-10 h-10 rounded-full bg-emerald-100 dark:bg-emerald-900 flex items-center justify-center mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-emerald-500" viewBox="0 0 20 20" fill="currentColor">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
              </svg>
            </div>
            <div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Call me</div>
              <a href="tel:+48661546446" class="text-gray-900 dark:text-gray-200 hover:text-emerald-500 dark:hover:text-emerald-400 transition-colors">
                +48 661 546 446
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }

  .animation-delay-100 {
    animation-delay: 100ms;
  }

  .animation-delay-200 {
    animation-delay: 200ms;
  }

  .animation-delay-300 {
    animation-delay: 300ms;
  }

  .animation-delay-400 {
    animation-delay: 400ms;
  }
</style>