---
import Layout from '../layouts/Layout.astro';
import TimelineCard from '../components/TimelineCard.astro';

const experiences = [
{
    year: "06.2024 - current",
    title: "Senior Front-End Developer",
    company: "CSHARK",
    description: "Spearheading the development of a sophisticated form builder for the Registry platform, implementing dynamic form generation and validation systems using Angular and NX monorepo architecture.",
    skills: ["Angular", "NX", "Azure"]
  },
  {
    year: "11.2023 - 05.2024",
    title: "Senior Front-End Developer",
    company: "Stibo Systems",
    description: "Led feature development for Stibo Systems PDX and Enhanced Content platforms in the Master Data Management sector. Architected and implemented complex UI components while optimizing monorepo structure for improved development efficiency.",
    skills: ["Angular", "NX"]
  },
  {
    year: "06.2023 - 08.2023",
    title: "Senior Front-End Developer (Freelancer)",
    company: "IT Bees",
    description: "Engineered core functionalities for a new mobile parking management application, Park Control 24. Successfully implemented cross-platform native integrations including camera systems, push notifications, and network handling for both Android and iOS platforms.",
    skills: ["Ionic", "Capacitor", "Angular"]
  },
  {
    year: "07.2021 - 10.2023",
    title: "Front-End Developer",
    company: "GOD Nearshore",
    description: "Architected and maintained an enterprise-grade ERP system for the automotive industry. Led the modernization of two mobile applications, successfully migrating from Ionic 3/Cordova to a modern NX-based architecture with Ionic 6 and Capacitor 5, improving performance and maintainability.",
    skills: ["Ionic", "Angular", "NX", "Capacitor", "Cordova"]
  },
  {
    year: "07.2020 - 07.2021",
    title: "Full-Stack Developer",
    company: "Sendit S. A.",
    description: "Developed and optimized web applications for Poland's leading delivery broker. Engineered an administrative SPA dashboard and created a versatile mapping widget utilizing Vue.js and vanilla JavaScript, enhancing user experience and operational efficiency.",
    skills: ["Angular", "Vue.js", "JavaScript"]
  },
  {
    year: "01.2020 - 06.2020",
    title: "Front-End Developer",
    company: "Angry Nerds",
    description: "Enhanced and maintained Volotea airlines' booking platform, including their customer-facing system, backoffice SPA, and landing page. Developed key features for an ERP system in the commercial alcohol industry, focusing on user experience and system reliability.",
    skills: ["Angular", "Umbraco CMS"]
  },
  {
    year: "05.2018 - 12.2020",
    title: "Junior Software Developer",
    company: "Exence S. A.",
    description: "Contributed to the development and maintenance of mission-critical enterprise applications for military, energy, and manufacturing sectors. Utilized a diverse tech stack to implement robust solutions across multiple platforms and frameworks.",
    skills: ["Angular", "Java Spring", "SQL", "Node", "Nest.js", "Electron", "Vue"]
  }
];

const education = [
  {
    year: "2017 - 2021",
    degree: "BSE CS - Bachelor of Science in Engineering (Computer Science)",
    institution: "Wrocławska Wyższa Szkoła Informatyki Stosowanej",
  }
];
---

<Layout title="Resume | Portfolio">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-3xl mx-auto opacity-0 animate-fade-in">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8">Resume</h1>
      
      <div class="relative">
        <div class="absolute left-4 top-0 h-full w-0.5 bg-primary/20"></div>
        {experiences.map((exp, index) => (
          <div class="mb-4 last:mb-0 opacity-0 animate-fade-in" style={`animation-delay: ${(index + 1) * 100}ms`}>
            <TimelineCard
              title={exp.title}
              subtitle={exp.company}
              year={exp.year}
              description={exp.description}
              skills={exp.skills}
              index={index}
            />
          </div>
        ))}
      </div>

      <div class="mt-12 opacity-0 animate-fade-in" style="animation-delay: 500ms">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Education</h2>
        <div class="relative">
          <div class="absolute left-4 top-0 h-full w-0.5 bg-primary/20"></div>
          {education.map((edu, index) => (
            <div class="mb-4 last:mb-0 opacity-0 animate-fade-in" style={`animation-delay: ${600 + (index * 100)}ms`}>
              <TimelineCard
                title={edu.degree}
                subtitle={edu.institution}
                year={edu.year}
                index={index}
              />
            </div>
          ))}
        </div>
      </div>

      {/* Video Section */}
      <div class="mt-16 opacity-0 animate-fade-in" style="animation-delay: 800ms">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Featured Video</h2>
        <div class="relative w-full pt-[56.25%] rounded-xl overflow-hidden shadow-lg">
          <iframe
            class="absolute top-0 left-0 w-full h-full"
            src="https://www.youtube.com/embed/DPeF4v2CNmU?si=YjfNL4Kn--ODNEVW"
            title="YouTube video player"
            frameborder="0"
            loading="lazy"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
          ></iframe>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }
</style>