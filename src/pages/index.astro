---
import Layout from '../layouts/Layout.astro';
import SocialsFloat from '../components/SocialsFloat.astro';
import { Image } from 'astro:assets';
import myImage from '../assets/me.webp';
---

<Layout title="Home | Portfolio">
    <div class="mx-auto px-4 sm:px-6 lg:px-8 py-12 max-sm:h-[calc(100vh-64px)] h-full w-full">
        <div class="text-center">
            <div class="mb-8 opacity-0 animate-fade-in">
                <Image
                        src={myImage}
                        alt="Profile picture"
                        loading="lazy"
                        decoding="async"
                        class="w-64 h-64 rounded-full mx-auto shadow-lg object-cover"
                />
            </div>
            <h1 class="text-4xl font-bold text-gray-900 dark:text-white sm:text-5xl md:text-6xl opacity-0 animate-fade-in [animation-delay:200ms]">
                Welcome to My Portfolio
            </h1>
            <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl opacity-0 animate-fade-in [animation-delay:400ms]">
                Seasoned full-stack developer with extensive experience in software architecture and business-driven
                solutions. Specialized in designing scalable applications that align with strategic business objectives
                and deliver measurable value.
            </p>
            <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8 opacity-0 animate-fade-in [animation-delay:600ms]">
                <div class="rounded-md shadow">
                    <a
                            data-astro-history="auto" href="/contact"
                            class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary-600 md:py-4 md:text-lg md:px-10 transition-all duration-300 hover:scale-105"
                    >
                        Get in touch
                    </a>
                </div>
            </div>
        </div>
        <SocialsFloat/>
    </div>
</Layout>
